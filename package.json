{
    "name": "mydenicek-monorepo",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "tsc -b",
        "build:watch": "tsc -b --watch",
        "clean": "tsc -b --clean",
        "test": "npm test --workspaces",
        "dev": "concurrently -k -n server,web -c blue,green \"npm run dev -w @mydenicek/sync-server\" \"npm run dev -w mywebnicek\"",
        "lint": "eslint . --fix",
        "spec": "cd specification && pdflatex -interaction=nonstopmode specification.tex && pdflatex -interaction=nonstopmode specification.tex"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.3.0",
        "globals": "^17.0.0",
        "typescript-eslint": "^8.53.1",
        "vite-tsconfig-paths": "^6.0.3"
    }
}
