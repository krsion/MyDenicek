{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "composite": true,
        "paths": {
            "@mydenicek/core-v2": [
                "../mydenicek-core-v2/src/index.ts"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "references": [
        { "path": "../mydenicek-core-v2" }
    ]
}