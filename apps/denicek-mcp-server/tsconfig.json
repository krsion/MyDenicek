{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": ".",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@mydenicek/core": [
                "../../packages/mydenicek-core/src/index.ts"
            ],
            "@mydenicek/mcp": [
                "../../packages/mydenicek-mcp/src/index.ts"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}